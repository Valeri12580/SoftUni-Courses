<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

    <url-mapping id="index">
        <pattern value="/index" />
        <view-id value="/faces/views/unauthenticated/index.xhtml" />
    </url-mapping>

    <url-mapping id="login">
        <pattern value="/login" />
        <view-id value="/faces/views/unauthenticated/login.xhtml" />
    </url-mapping>

    <url-mapping id="register">
        <pattern value="/register" />
        <view-id value="/faces/views/unauthenticated/register.xhtml" />
    </url-mapping>

    <url-mapping id="home">
        <pattern value="/home" />
        <view-id value="/faces/views/authenticated/home.xhtml" />
    </url-mapping>

    <url-mapping id="add">
        <pattern value="/job-add" />
        <view-id value="/faces/views/authenticated/add-job.xhtml" />
    </url-mapping>

    <url-mapping id="details">
        <pattern value="/details" />
        <view-id value="/faces/views/authenticated/job-details.xhtml" />

    </url-mapping>

    <url-mapping id="delete">
        <pattern value="/delete" />
        <view-id value="/faces/views/authenticated/delete-job.xhtml" />

    </url-mapping>

</pretty-config>